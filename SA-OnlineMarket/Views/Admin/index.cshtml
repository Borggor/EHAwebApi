<!-- Add New Product Section -->
<section id="add-product">
    <h3>Add New Product</h3>
    <form asp-action="addProduct" method="post">
        <div class="form-group">
            <label asp-action="Name">Product Name</label>
            <input asp-action="Name" required />
        </div>
        <div class="form-group">
            <label asp-action="Description">Description</label>
            <textarea asp-action="Description" required></textarea>
        </div>
        <div class="form-group">
            <label asp-action="Price">Price</label>
            <input asp-action="Price" required />
        </div>
        <div class="form-group">
            <label asp-action="Stock">Stock</label>
            <input asp-action="Stock" required />
        </div>
        <button type="submit" class="btn btn-success">Add Product</button>
    </form>
</section>
